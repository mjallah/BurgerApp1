<div class="container">
    <h1>Eat-Da-Burger!</h1>

    <form class="create-form">
        <div class="form-group">
            <label for="createburger" class="createBurger">Make a burger:</label>
            <input type="text" id="createburger" name="burger">
            <button class="makeBurger btn-danger" type="submit"> Create!<i class="fas fa-hamburger"></i></button>
        </div>
    </form>
    <br>
    <div class="row">
        <div class="notdevoured col-md-6">
            <h2>Burgers to be devoured!</h2>

            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/not-devoured-block devoured=true}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>


        <div class="devoured col-md-6">
            <h2>Devoured Burgers</h2>
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                {{> burgers/devoured-block devoured=false}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>